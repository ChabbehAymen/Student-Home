<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.PreviewActivity">

    <TextView
        android:id="@+id/prevTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/rowdies_bold"
        android:gravity="center"
        android:text="@string/You_Are_University_Student_prev"
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/prev_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prevTitle"
        android:layout_marginTop="96dp"
        android:src="@drawable/error_404_prev"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/prevDec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prev_image"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/looking_froHome_prev"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/next_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prevDec"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/roboto_black_italic"
        android:text="@string/next"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/bottom_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_toStartOf="@id/next_prev"
        android:layout_toEndOf="@id/skip_prev"
        android:src="@drawable/prev_dots" />

    <TextView
        android:id="@+id/skip_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prevDec"
        android:layout_marginStart="32dp"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/roboto_black_italic"
        android:text="@string/skip"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="MissingConstraints" />
</RelativeLayout>